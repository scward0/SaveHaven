<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content - Your existing ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:animateLayoutChanges="true">

                <!-- Header - Simplified since we now have toolbar -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preference Settings"
                    android:textAppearance="?attr/textAppearanceHeadlineMedium"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Weekly Summary -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/weekly_summary"
                            android:contentDescription="Weekly Summary Icon"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:text="Weekly Goal Summary"
                                android:textStyle="bold"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Get a Sunday summary of your savings progress."
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_weekly_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:useMaterialThemeColors="true" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Habit Change -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/habit_changes"
                            android:contentDescription="Habit Change Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:text="Habit Change Alerts"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Be notified when you're saving smarter."
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?android:textColorSecondary"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_habit_notifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:useMaterialThemeColors="true" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Daily Reminder -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/alarm_on"
                            android:contentDescription="Daily Reminder Icon"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:text="Daily Logging Reminder"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Keep your habits strong with a daily nudge."
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?android:textColorSecondary"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_daily_reminders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:useMaterialThemeColors="true" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Education Tips -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/educational"
                            android:contentDescription="Education Tips Icon"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:text="Financial Education Tips"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Learn something new about money every day."
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?android:textColorSecondary"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_education_facts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:useMaterialThemeColors="true" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>